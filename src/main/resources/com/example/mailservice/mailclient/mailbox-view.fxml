<Pane prefHeight="600.0" prefWidth="900.0" style="-fx-background-image: url('https://static.vecteezy.com/ti/foto-gratuito/p1/15587819-creativo-disposizione-di-blu-le-foglie-natura-sfondo-foto.jpg'); -fx-background-size: cover;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.mailservice.mailclient.MailboxController">
   <children>
      <ListView fx:id="lstEmails" layoutX="30.0" layoutY="50.0" opacity="0.93" prefHeight="500.0" prefWidth="260.0" />
      <Button fx:id="btnRispondi" layoutX="750.0" layoutY="50.0" mnemonicParsing="false" onAction="#onBtnReplyClick" text="Rispondi" visible="false" />
