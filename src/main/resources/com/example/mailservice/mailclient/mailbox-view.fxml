      <Button fx:id="btnForward" layoutX="750.0" layoutY="130.0" mnemonicParsing="false" onAction="#onBtnForwardClick" text="Inoltra" visible="false" />
      <ImageView visible="true" fitHeight="40.0" fitWidth="40.0" layoutX="600.0" layoutY="10.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image backgroundLoading="true" url="@../../../../../java/com/example/mailservice/mailclient/assets/user.png" />
         </image>
      </ImageView>

      <Pane visible="true" prefHeight="40.0" prefWidth="40.0" layoutX="600.0" layoutY="10.0" pickOnBounds="true" style="-fx-background-image: url('https://i.pinimg.com/originals/50/1e/df/501edf1ddfd8e3814d21c4855720cd10.png'); -fx-background-size: cover;">
      </Pane>
   </children>
